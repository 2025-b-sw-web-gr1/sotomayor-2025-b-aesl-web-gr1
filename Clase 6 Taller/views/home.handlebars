<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-4 fw-bold mb-3">
                        Hola, soy <span class="text-warning">{{name}}</span>
                    </h1>
                    <h2 class="h3 mb-4">{{title}}</h2>
                    <p class="lead mb-4">{{bio}}</p>
                    <div class="hero-buttons">
                        <a href="/projects" class="btn btn-warning btn-lg me-3">
                            <i class="fas fa-laptop-code"></i> Ver Proyectos
                        </a>
                        <a href="/contact" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-envelope"></i> Contactar
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image">
                    <div class="profile-placeholder">
                        <i class="fas fa-user-circle fa-10x text-warning opacity-75"></i>
                        <p class="mt-3 text-light">
                            <small>Foto de perfil placeholder</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Skills Section -->
<section class="skills-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-title">Habilidades Técnicas</h2>
                <p class="text-muted">Tecnologías que manejo actualmente</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="skills-grid">
                    {{#each skills}}
                    <div class="skill-item">
                        <span class="skill-badge">{{this}}</span>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Projects Preview -->
<section class="featured-projects py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="section-title">Proyectos Destacados</h2>
                <p class="text-muted">Algunos de mis trabajos recientes</p>
            </div>
        </div>
        <div class="row">
            {{#each (slice projects 0 3)}}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="project-card card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{description}}</p>
                        <div class="project-tech mb-3">
                            {{#each technologies}}
                            <span class="tech-tag">{{this}}</span>
                            {{/each}}
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between">
                            <a href="{{github}}" class="btn btn-outline-primary btn-sm">
                                <i class="fab fa-github"></i> Código
                            </a>
                            <a href="/project/{{id}}" class="btn btn-primary btn-sm">
                                <i class="fas fa-eye"></i> Ver más
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="text-center mt-4">
            <a href="/projects" class="btn btn-primary btn-lg">
                <i class="fas fa-arrow-right"></i> Ver todos los proyectos
            </a>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="cta-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <div class="cta-content">
                    <h2 class="mb-3">¿Interesado en trabajar juntos?</h2>
                    <p class="lead mb-4">
                        Estoy disponible para proyectos freelance y oportunidades de colaboración
                    </p>
                    <a href="/contact" class="btn btn-warning btn-lg">
                        <i class="fas fa-paper-plane"></i> Envíame un mensaje
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>